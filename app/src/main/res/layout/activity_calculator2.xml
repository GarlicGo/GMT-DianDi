<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".fragments.fragment2.Calculator2">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:background="@color/tab_checked">
        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:src="@drawable/back"
                android:onClick="calculator2_onClick"
                android:layout_marginLeft="15dp"/>


        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/temp_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout"
        android:layout_marginTop="100dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:outlineProvider="bounds">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape"
                android:orientation="vertical"
                android:elevation="8dp">



                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/analyze_spend"/>

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="转出"/>

                </LinearLayout>

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/textBlack"
                    android:text="现金"/>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/change"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape"
                android:orientation="vertical"
                android:elevation="8dp">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="转入"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/analyze_income"/>



                </LinearLayout>

                <TextView
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/textBlack"
                    android:text="现金"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


    




    <RelativeLayout
        android:layout_above="@+id/select_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp">

        <TextView
            android:id="@+id/item_tb_type_tv"
            android:textColor="#333333"
            android:textSize="26sp"
            android:layout_alignParentLeft="true"
            android:paddingRight="10dp"
            android:paddingLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tb_note_money"
            android:text="0.00"
            android:textColor="#000000"
            android:maxLength="11"
            android:layout_toLeftOf="@+id/calculator2_clear"
            android:textSize="28sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/calculator2_clear"
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/calculator_numberdelete"
            android:onClick="calculator2_onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/select_layout"
        android:layout_above="@+id/view_line"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_tb_calc"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/calculator2__date"
            android:background="@color/tab_checked"
            android:textSize="15sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="6dp"
            android:paddingBottom="7dp"
            android:layout_marginTop="7dp"
            android:textColor="@color/textWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="calculator2_onClick"
            android:text="今天"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/calculator_ediTtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_border"
                android:hint=" 编辑备注 "/>
            <!--<ImageView-->
            <!--android:id="@+id/tb_note_remark"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:paddingLeft="10dp"-->
            <!--android:paddingTop="5dp"-->
            <!--android:paddingRight="16dp"-->
            <!--android:paddingBottom="5dp"-->
            <!--android:src="@mipmap/ic_tb_note_remark"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"/>-->
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_above="@+id/bottom"
        style="@style/horizontal_decoration_style"
        android:background="#8c8c8c"/>

    <LinearLayout
        android:id="@+id/bottom"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="220dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/calculator2_num_1"
                android:text="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:onClick="calculator2_onClick"
                android:background="@drawable/bg_radius_click"
                android:textColor="#000000" />
            <View
                style="@style/horizontal_decoration_style"
                android:background="#8c8c8c"/>
            <TextView
                android:id="@+id/calculator2_num_4"
                android:text="4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:onClick="calculator2_onClick"
                android:background="@drawable/bg_radius_click"
                android:gravity="center"
                android:textColor="#000000" />
            <View
                style="@style/horizontal_decoration_style"
                android:background="#8c8c8c"/>
            <TextView
                android:id="@+id/calculator2_num_7"
                android:text="7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:onClick="calculator2_onClick"
                android:background="@drawable/bg_radius_click"
                android:gravity="center"
                android:textColor="#000000" />
            <View
                style="@style/horizontal_decoration_style"
                android:background="#8c8c8c"/>
            <TextView
                android:id="@+id/calculator2_num_dot"
                android:text="."
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:onClick="calculator2_onClick"
                android:background="@drawable/bg_radius_click"
                android:textColor="#000000"
                />
        </LinearLayout>
        <View
            style="@style/vertical_decoration_style"
            android:background="#8c8c8c"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/calculator2_num_2"
                    android:text="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:background="@drawable/bg_radius_click"
                    android:gravity="center"
                    android:onClick="calculator2_onClick"
                    android:textColor="#000000" />
                <View
                    style="@style/vertical_decoration_style"
                    android:background="#8c8c8c"
                    />
                <TextView
                    android:id="@+id/calculator2_num_3"
                    android:text="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:onClick="calculator2_onClick"
                    android:background="@drawable/bg_radius_click"
                    android:textColor="#000000" />
            </LinearLayout>
            <View
                style="@style/horizontal_decoration_style"
                android:background="#8c8c8c"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/calculator2_num_5"
                    android:text="5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:background="@drawable/bg_radius_click"
                    android:gravity="center"
                    android:onClick="calculator2_onClick"
                    android:textColor="#000000" />
                <View
                    style="@style/vertical_decoration_style"
                    android:background="#8c8c8c"
                    />
                <TextView
                    android:id="@+id/calculator2_num_6"
                    android:text="6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:onClick="calculator2_onClick"
                    android:background="@drawable/bg_radius_click"
                    android:textColor="#000000"
                    />
            </LinearLayout>
            <View
                style="@style/horizontal_decoration_style"
                android:background="#8c8c8c"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/calculator2_num_8"
                    android:text="8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:background="@drawable/bg_radius_click"
                    android:gravity="center"
                    android:onClick="calculator2_onClick"
                    android:textColor="#000000" />
                <View
                    style="@style/vertical_decoration_style"
                    android:background="#8c8c8c"
                    />
                <TextView
                    android:id="@+id/calculator2_num_9"
                    android:text="9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:onClick="calculator2_onClick"
                    android:background="@drawable/bg_radius_click"
                    android:textColor="#000000" />
            </LinearLayout>
            <View
                style="@style/horizontal_decoration_style"
                android:background="#8c8c8c"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/calculator2_num_0"
                    android:text="0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:onClick="calculator2_onClick"
                    android:background="@drawable/bg_radius_click"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>
        <View
            style="@style/vertical_decoration_style"
            android:background="#8c8c8c"
            />

        <View
            style="@style/vertical_decoration_style"
            android:background="#8c8c8c"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/calculator2_num_del"
                android:layout_weight="1"
                android:onClick="calculator2_onClick"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/calculator_delete"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/calculator2_num_done"
                android:text="确定"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:onClick="calculator2_onClick"
                android:background="@color/tab_checked"
                android:textColor="@color/textWhite" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>