<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="@drawable/calculator_selector_item_selected"
    >

    <ImageView
        android:id="@+id/calculator_item_iv"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:src="@mipmap/sort_1_jiaotong"

        />

    <TextView
        android:id="@+id/calculator_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="类别"
        />

    <!--android:background="@drawable/bg_radius_click"-->

</LinearLayout>