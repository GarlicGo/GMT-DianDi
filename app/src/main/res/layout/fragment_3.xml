<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#255bfc"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/frag3_date"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:textColor="@color/tab_checked"
            android:background="@drawable/shape"
            android:gravity="center"
            android:text="2019年8月"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/top_ll_out"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当月支出(元)"
                    android:textColor="@color/textWhite"
                    android:textSize="13sp"
                    android:singleLine="true"/>
                <TextView
                    android:id="@+id/t_outcome"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="@color/textWhite"
                    android:textSize="20sp"
                    android:singleLine="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当月收入(元)"
                    android:textColor="@color/textWhite"
                    android:textSize="13sp"
                    android:singleLine="true"/>
                <TextView
                    android:id="@+id/t_income"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="@color/textWhite"
                    android:textSize="20sp"
                    android:singleLine="true"/>

            </LinearLayout>

            <View android:layout_width="1dp"
                android:layout_height="41dp"
                android:background="#DCDCDC">
            </View>

            <LinearLayout
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结余(元)"
                    android:textColor="@color/textWhite"
                    android:textSize="15sp"
                    android:singleLine="true"/>
                <TextView
                    android:id="@+id/t_total"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="@color/textWhite"
                    android:textSize="20sp"
                    android:singleLine="true"/>

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/background_gray"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/textWhite"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/analyze_spend_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/analyze_spend"/>
                <TextView
                    android:id="@+id/analyze_spend_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="支出分析"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/analyze_income_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/analyze_income"/>
                <TextView
                    android:id="@+id/analyze_income_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="收入分析"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/analyze_sum_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/analyze_summary"/>
                <TextView
                    android:id="@+id/analyze_sum_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="收支分析"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment3_recycle_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
        <!--<Button-->
            <!--android:id="@+id/test_button1"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="创建数据库"/>-->


    </LinearLayout>




</LinearLayout>